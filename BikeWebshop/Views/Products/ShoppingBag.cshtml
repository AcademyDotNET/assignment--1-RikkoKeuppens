@model ShoppingItemList
@{
}
<h1>Shopping bag</h1>
<table class="d-flex w-full justify-content-around mt-5 flex-wrap">
    @foreach(ShoppingItem shoppingItem in Model.ShoppingItems)
    {
        <tr class="pb-0 pt-3 px-3 border m-3 w-full">
            <td class="text-center w-full font-weight-bold">@shoppingItem.Product.Name</td>
            <td class="text-center w-full font-weight-bold mt-3">@shoppingItem.Quantity</td>
        </tr>
    }
</table>

